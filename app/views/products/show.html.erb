<div class="flex flex-col gap-4">
<% cache @product do %>
  <h1 class="text-xl"><%= @product.name %></h1>
  <%= @product.description %>
  <%= image_tag @product.featured_image if @product.featured_image.attached? %>

<% end %>
  <%= render "inventory", product: @product %>
  <%= link_to "Back", products_path, class: "text-blue-500" %>
  <% if authenticated? %>
  <%= link_to "Edit", edit_product_path(@product), class: "text-blue-500" %>
  <%= button_to "Delete", @product, method: :delete, class: "text-blue-500", data: {turbo_confirm: "Are you sure?"} %>
  <% end %>
</div>